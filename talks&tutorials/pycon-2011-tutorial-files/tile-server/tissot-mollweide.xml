<?xml version="1.0" encoding="UTF-8"?>
<Map srs="+proj=laea +lat_0=45 +lon_0=-100 +x_0=0 +y_0=0 +a=6370997 +b=6370997 +units=m +no_defs" bgcolor="#98bcda">

  <Style name="world">
    <Rule>
      <PolygonSymbolizer>
	<CssParameter name="fill">#eae8dd</CssParameter>
      </PolygonSymbolizer>
    </Rule>
  </Style>

  <Style name="tissot">
    <Rule>
      <PolygonSymbolizer>
	<CssParameter name="fill">red</CssParameter>
	<CssParameter name="fill-opacity">0.5</CssParameter>
      </PolygonSymbolizer>
    </Rule>
  </Style>

  <Layer name="world" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>world</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">coastlines/10m_land</Parameter>
    </Datasource>
  </Layer>

  <Layer name="tissot" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>tissot</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">tissot</Parameter>
    </Datasource>
  </Layer>

</Map>
